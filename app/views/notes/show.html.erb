<section>
 <% if current_user %>
 <h2>Have feedback?</h2>
<%= form_for([@note, @note.comments.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :commenter %>
  </p>
  
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  </section>
  
  <section>
<h2>Talk about it</h2>
<br>
<% @note.comments.each do |comment| %>
  <p>
    <strong>User:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  
  <p>
  <%= link_to 'Delete Comment', [comment.note, comment],
